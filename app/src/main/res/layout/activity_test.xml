<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PluginMainTestActivity">

    <Button
        android:id="@+id/load_plugin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/load_plugin"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plugin_test_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/plugin_test"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/load_plugin"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/jump_second_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/jump_second"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/plugin_test_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/component_page"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/component_page"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/jump_second_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nest_scroll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/nest_scroll"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/component_page"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>